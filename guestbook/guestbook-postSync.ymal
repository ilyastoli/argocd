apiVersion: batch/v1
kind: Job
metadata:
  name: post-status
  annotations:
    argocd.argoproj.io/hook: PostSync
spec:
  template:
    spec:
      containers:
      - name: ubuntu
        image: ubuntu:latest
        command: [ "/bin/bash", "-c", "--" ]
        args: [ "sleep 10" ]
      restartPolicy: Never
  backoffLimit: 0
