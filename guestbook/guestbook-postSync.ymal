apiVersion: batch/v1
kind: Job
metadata:
  name: deploy-status
  annotations:
    argocd.argoproj.io/hook: PostSync
spec:
  template:
    spec:
      containers:
        - name: deploy-status
          image: curlimages/curl
          command:
            - /bin/bash
            - -c
            - |
              curl google.com
      restartPolicy: Never
  backoffLimit: 0
